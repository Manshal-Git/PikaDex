<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10"
    android:id="@+id/pokeCard">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="8dp">


    <TextView
        android:id="@+id/pokeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Charmender"
        android:textStyle="bold"
        android:textSize="24sp"/>


        <TextView
            android:id="@+id/poketype1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pokeName"
            android:layout_margin="8dp"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginEnd="@dimen/text_margin"
            android:layout_marginBottom="@dimen/text_margin"
            android:background="@drawable/type_bg"
            android:textColor="@color/white"
            android:paddingHorizontal="16dp"
            android:text="Fire"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/poketype2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pokeName"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/poketype1"
            android:background="@drawable/type_bg"
            android:paddingHorizontal="16dp"
            android:text="flying"
            android:textSize="18sp" />

    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/charmender"/>

    </RelativeLayout>
</LinearLayout>