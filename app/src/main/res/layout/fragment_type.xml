<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="4dp"
    tools:context=".fragments.TypeFragment">

    <TextView
        android:id="@+id/Adtitletxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginVertical="4dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Advantage Against"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl2x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2x"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/lbl4x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4x"
            android:padding="4dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="1dp"
            android:textStyle="bold"
            android:layout_below="@+id/lbl2x"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/lbl2x">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--            Advantage container 2x-->
                <LinearLayout
                    android:id="@+id/adItemContainer2x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:orientation="horizontal" />
                <!--            Advantage container 4x-->
                <LinearLayout
                    android:id="@+id/adItemContainer4x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:orientation="horizontal" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </HorizontalScrollView>
    </RelativeLayout>

    <TextView
        android:id="@+id/Distitletxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginVertical="4dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Disadvantage Against"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl2xd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:text="2x"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/lbl4xd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4x"
            android:padding="4dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="1dp"
            android:textStyle="bold"
            android:layout_below="@+id/lbl2xd"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/lbl2xd">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/disItemContainer2x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/disItemContainer4x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:orientation="horizontal" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </HorizontalScrollView>
    </RelativeLayout>

</LinearLayout>